        h1 Home Page

    .panel.panel-default
        .panel-heading Settings
        .panel-body
            form#target(method='post', action='/bar')
                p Renewable data from the database or local JSON
                select.form-control#dataType(name='dataType')
                    option Database
                    option JSON
                hr

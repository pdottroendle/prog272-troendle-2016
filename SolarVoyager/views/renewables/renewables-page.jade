.jumbotron

    h3 Renewables

    .alert.alert-success
        p#display

    .alert.alert-info
        p#display2

    .alert.alert-info
        pre#debug

        .container
            .panel.panel-default
                .panel-heading Renewable
                    .panel-body
                        .input-group
                        span.input-group-btn
                            button#minusButton.btn.btn-danger.btn-number(type="button")
                        span.glyphicon.glyphicon-minus
                            input#indexInput.form-control.input-number(type="number", value=0, min='0', max='12')
                        span.input-group-btn
                            button#plusButton.btn.btn-success.btn-number(type="button")
                        span.glyphicon.glyphicon-plus
                        .input-group
                        span.input-group-addon Year renewables
                            input#yearView.form-control(type='text', placeholder='year')
                        .input-group
                        span.input-group-addon Solar renewables
                            input#solarView.form-control(type='text', placeholder='solar')
                        .input-group
                        span.input-group-addon Geothermal renewables
                            input#geoView.form-control(type='text', placeholder='geo')
                        .input-group
                        span.input-group-addon Other biomass renewables
                            input#biomassView.form-control(type='text', placeholder='bio')
                        .input-group
                        span.input-group-addon Wind power renewables
                            input#windView.form-control(type='text', placeholder='wind')
                        .input-group
                        span.input-group-addon Liquid biofuels renewables
                            input#liquidView.form-control(type='text', placeholder='liquid')
                        .input-group
                        span.input-group-addon Wood biomass renewables
                            input#woodView.form-control(type='text', placeholder='wood')
                        .input-group
                        span.input-group-addon Hydropower renewables
                            input#hydroView.form-control(type='text', placeholder='hydro')

